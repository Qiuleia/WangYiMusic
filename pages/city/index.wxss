.title{
  text-align: center;
  font-size: 20px;
  line-height: 30px;
}
.text-wrap{
  width: 600rpx;
  margin: auto;
  padding: 10px;
  margin-top: 20px;
  border-top: 1px solid black;
  box-shadow: 0 10rpx 10rpx rgb(168, 164, 164);
}
.user{
  height: 120rpx;
  display: flex;
  margin-bottom: 20px;
}
.userImg image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.userName{
  line-height: 120rpx;
  margin-left: 5px;
}