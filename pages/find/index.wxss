/* pages/find/index.wxss */
.banner {
  width: 100%;
  height: 400rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* mune */
.mune {
  display: flex;
  margin-top: 10px;
  flex-wrap: nowrap;
  height: 140rpx;
  text-align: center;
  justify-content: space-evenly;
}
.iconfont{
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 60rpx;
}
.songicon{
  color: black;
}
.mune-icon {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  font-size: 50rpx;
  line-height: 80rpx;
  background-color: red;
  border-radius: 50%;
}

.mune-icon:active::before{
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  content: "";
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(172, 168, 168, 0.527);
}
.mune-text {
  height: 40rpx;
  font-size: 25rpx;
  line-height: 40rpx;
}
